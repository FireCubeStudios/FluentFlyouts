<flyouts:FlyoutWindow
    xmlns:flyouts="using:CubeKit.Flyouts"
    x:Class="FluentFlyouts3.Flyouts.BatteryFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentFlyouts3.Flyouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:flyoutcontrols="using:CubeKit.Flyouts.Controls"
    xmlns:controls="using:FluentFlyouts3.Controls"
    mc:Ignorable="d"
    Height="240"
    Width="370">
    <Grid ManipulationDelta="Flyout_ManipulationDelta" ManipulationMode="TranslateX, TranslateY">
        <flyoutcontrols:FlyoutIcon x:Name="Icon" Window="{x:Bind }"/>
        <controls:BatteryFlyoutControl x:Name="Content" Height="240"/>
    </Grid>
</flyouts:FlyoutWindow>
